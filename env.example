# Configuration du serveur de chat WebSocket

# Token secret pour l'authentification des clients
# Générez un token fort avec: openssl rand -hex 32
SECRET_TOKEN=TOKEN_123

# Configuration du serveur
HOST=0.0.0.0
PORT=8080

# Configuration de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# Configuration de sécurité
MAX_MESSAGE_LENGTH=500
MAX_CONNECTIONS=100
RATE_LIMIT_PER_MINUTE=60
